<!DOCTYPE log4j:configuration >
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true">
   
<plugin name="LogFileReceiver" class="org.apache.log4j.varia.LogFilePatternReceiver">
     <param name="fileURL" value="file:///e:/workspace/ReljaSketchRecog/logging/root_log.log"   />
     <param name="timestampFormat" value="dd MMM yyyy, HH:mm:ss:SSS"  /> 
     <param name="logFormat" value="TIMESTAMP LEVEL [LOGGER] [THREAD] LINE -- MESSAGE"/> 
